<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sq.union.manage.dao.mpdriver.ex.ConferenceRolePermissionExMapper" >
  <resultMap id="BaseResultMap" type="com.sq.transportmanage.gateway.dao.entity.mpdriver.ConferenceRolePermission" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="role_id" property="roleId" jdbcType="INTEGER" />
    <result column="permission_id" property="permissionId" jdbcType="INTEGER" />
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
  </resultMap>
  <sql id="Base_Column_List" >
    id, role_id, permission_id, create_time, update_time
  </sql>
  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Long" >
    select 
    <include refid="Base_Column_List" />
    from conference_role_permission
    where id = #{id,jdbcType=BIGINT}
  </select>


  <select id="queryPermissionIdsOfRole" resultType="java.lang.Integer">
  		select DISTINCT permission_id from conference_role_permission where role_id = #{roleId}
  </select>
  <!-- 删除一个角色的所有权限ID -->
  <delete id="deletePermissionIdsOfRole">
  		delete from conference_role_permission where role_id = #{roleId}
  </delete>
  <!-- 删除一个权限的所有角色ID -->
  <delete id="deleteRoleIdsOfPermission">
  		delete from conference_role_permission where permission_id = #{permissionId}
  </delete>
  <!-- 保存一个角色的所有权限ID(批量插入) -->
  <insert id="insertBatch">
    insert into conference_role_permission (role_id, permission_id)
    values
    <foreach collection="records" open="" close="" separator=","  item="record">
      (#{record.roleId,jdbcType=INTEGER}, #{record.permissionId,jdbcType=INTEGER})
    </foreach>
  </insert>

  <!-- 查询一个权限的所有角色ID -->
  <select id="queryRoleIdsOfPermission" resultType="java.lang.Integer">
  		select DISTINCT role_id from conference_role_permission where permission_id = #{permissionId}
  </select>

  <select id="queryRoleNameList" resultType="java.lang.String">
      SELECT sr.role_name
      FROM
        conference_user_role surr
        LEFT JOIN conference_role sr ON surr.role_id = sr.role_id
        WHERE sr.valid = 1 and user_id = #{userId}
  </select>
  <select id="queryRoleCodeList" resultType="java.lang.String">
    SELECT sr.role_code
    FROM
    conference_user_role surr
    LEFT JOIN conference_role sr ON surr.role_id = sr.role_id
    WHERE sr.valid = 1 and user_id = #{userId}
  </select>
</mapper>